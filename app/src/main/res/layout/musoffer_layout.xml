<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/my_offer_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/my_offerName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Bass guitarist"
                android:textSize="20sp"
                android:textColor="@color/colorOfDarkBlue"
                android:fontFamily="sans-serif"/>
            <TextView
                android:id="@+id/my_offerSalary"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="100-500$"
                android:layout_below="@+id/my_offerName"
                android:textSize="18sp"
                android:textColor="@color/colorOfDarkBlue"
                android:fontFamily="sans-serif"/>
            <Button
                android:id="@+id/accept_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/my_offerName"
                android:layout_marginLeft="30dp"
                android:background="@drawable/ic_accept" />
            <Button
                android:id="@+id/reject_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/accept_btn"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_reject" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>
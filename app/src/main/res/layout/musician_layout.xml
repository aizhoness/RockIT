<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/musician_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageViewPhoto"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:src="@drawable/no_profile"
                android:padding="0dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorOfRed"/>
            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Sara Adams"
                android:layout_toRightOf="@id/imageViewPhoto"
                android:textSize="20sp"
                android:textColor="@color/colorOfDarkBlue"
                android:fontFamily="sans-serif"/>
            <LinearLayout
                android:id="@+id/rate_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewName"
                android:layout_toRightOf="@id/imageViewPhoto"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_blue_rate" />
                <TextView
                    android:id="@+id/textViewRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorOfDarkBlue"
                    android:textSize="18sp"
                    android:text="4.6"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rate_layout"
                android:layout_toRightOf="@id/imageViewPhoto"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_skills"/>
                <TextView
                    android:id="@+id/textViewSkills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorOfDarkBlue"
                    android:textSize="18sp"
                    android:text="guitar, dombra"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>
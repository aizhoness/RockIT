<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOfRed"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@color/colorOfRed"
            android:layout_gravity="center_horizontal"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ProfPhoto"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/no_profile"
                android:padding="0dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFF"/>

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:paddingTop="3dp"
                android:paddingBottom="5dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textAlignment="center"
                    android:text="Patrik Hamfer"
                    android:textStyle="bold"
                    android:textColor="@color/colorOfDarkBlue"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif" />
                <LinearLayout
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/locationicon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:textAlignment="center"
                        android:src="@drawable/ic_location"/>
                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Almaty, Kazakhstan"
                        android:textColor="@color/colorofKoala"
                        android:textSize="17sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/typeicon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:textAlignment="center"
                        android:src="@drawable/ic_type"/>
                    <TextView
                        android:id="@+id/client_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company"
                        android:textColor="@color/colorofKoala"
                        android:textSize="17sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ref_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/prof_btns"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:layout_marginTop="10dp">


                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>